# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/fluxboard

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# CORS Configuration
# Additional allowed origin for production (optional)
# Example: CORS_ORIGIN=https://yourdomain.com
CORS_ORIGIN=

# AI Configuration
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Authentication Configuration
# Generate a secure JWT secret with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-replace-with-generated-value
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=2592000

# S3 Configuration
# AWS region where your S3 bucket is located
AWS_REGION=us-east-1
# S3 bucket name for storing attachments
AWS_S3_BUCKET=fluxboard-attachments
# AWS credentials (optional, uses default AWS credentials if not set)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Maximum upload file size in bytes (default: 5242880 = 5MB)
S3_UPLOAD_MAX_SIZE=5242880
# Allowed MIME types for uploads (comma-separated)
S3_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
# Pre-signed upload URL expiry in minutes (default: 15)
S3_UPLOAD_URL_EXPIRY_MINUTES=15
# Pre-signed download URL expiry in days (default: 7)
S3_DOWNLOAD_URL_EXPIRY_DAYS=7

# Logging
RUST_LOG=info,actix_web=debug,sqlx=debug